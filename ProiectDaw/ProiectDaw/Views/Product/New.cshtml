@model ProiectDaw.Models.Product

@{
    ViewBag.Titlu = "Adaugare Produs Nou";
}

<h2>@ViewBag.Titlu</h2>
<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Product"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    // @Html.HiddenFor(m => m.UserId)

    @Html.Label("Title", "Titlu produs")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Description", "Descrierea produsului")
    <br />
    @Html.TextArea("Description", null, new { @class = "form-control" })
    @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Price", "Pretul produsului")
    <br />
    @Html.TextArea("Price", null, new { @class = "form-control" })
    @Html.ValidationMessage("Price", "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Hidden("Date", DateTime.Now, new { @class = "form-control" })

    <label>Selectati categoria</label>

    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Value", "Text"),
        "Selectati categoria", new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
    <br />

    <button class="btn btn-sm btn-primary" type="submit">Adauga articol</button>
}
